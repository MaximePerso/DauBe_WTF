<Window x:Class="DauBe_WTF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DauBe_WTF"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="1261" Width="1735" Loaded="Window_Loaded"
        d:DataContext="{d:DesignData Type=local:RealTimeChartsVM, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <collections:ArrayList x:Key="colors">
            <Color>DodgerBlue</Color>
            <Color>Red</Color>
            <Color>Green</Color>
        </collections:ArrayList>

        <collections:ArrayList x:Key="brushes">
            <SolidColorBrush Color="Transparent"></SolidColorBrush>
            <SolidColorBrush Color="#861E90FF"></SolidColorBrush>
            <LinearGradientBrush>
                <GradientStop Offset="0" Color="#86FF0000" />
                <GradientStop Offset="1" Color="#80FFFF00" />
            </LinearGradientBrush>
        </collections:ArrayList>
    </Window.Resources>

    <Grid x:Name="mainGrid" RenderTransformOrigin="0.697,0.415">
        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="253*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10,20,0,0" Grid.Row="0">
            <TextBox x:Name="guiTime" HorizontalAlignment="Left" Height="35" Margin="98,41,0,0" TextWrapping="Wrap" Text="0.000" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24" TextAlignment="Center" Background="Black" BorderBrush="White" Foreground="#FF32E00B"/>
            <TextBox x:Name="guiPosition" HorizontalAlignment="Left" Height="35" Margin="258,41,0,0" TextWrapping="Wrap" Text="0.000" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24" TextAlignment="Center" Background="Black" BorderBrush="White" Foreground="#FF32E00B"/>
            <TextBox x:Name="guiLoad" HorizontalAlignment="Left" Height="35" Margin="427,41,0,0" TextWrapping="Wrap" Text="0.000" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24" TextAlignment="Center" Background="Black" BorderBrush="White" Foreground="#FF32E00B"/>
            <TextBox x:Name="guiExtension" HorizontalAlignment="Left" Height="35" Margin="589,41,0,0" TextWrapping="Wrap" Text="0.000" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24" TextAlignment="Center" Background="Black" BorderBrush="White" Foreground="#FF32E00B"/>
            <Label Content="Time [s]" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.658,1.154" Margin="123,10,0,0" FontWeight="Bold" Cursor="" FontSize="16" Height="31" Width="71"/>
            <Label Content="Position [mm]" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.658,1.154" Margin="264,10,0,0" FontWeight="Bold" Cursor="" FontSize="16" Height="31" Width="116"/>
            <Label Content="Load [N]" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.658,1.154" Margin="446,10,0,0" FontWeight="Bold" Cursor="" FontSize="16" Height="31" Width="75"/>
            <Label Content="Extension [mm]" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.658,1.154" Margin="587,10,0,0" FontWeight="Bold" Cursor="" FontSize="16" Height="31" Width="128"/>
            <Button x:Name="btnOn" Content="On" HorizontalAlignment="Left" Margin="852,41,0,0" VerticalAlignment="Top" Width="76" Height="20"/>
            <Label x:Name="lblDestination" Content="" HorizontalAlignment="Left" Margin="272,379,0,0" VerticalAlignment="Top" Height="19" Width="10"/>
            <RichTextBox x:Name="guiDebug" HorizontalAlignment="Left" Height="94" Margin="53,304,0,0" VerticalAlignment="Top" Width="756">
                <FlowDocument/>
            </RichTextBox>
            <TabControl HorizontalAlignment="Left" Height="234" Margin="814,88,0,0" VerticalAlignment="Top" Width="774">
                <TabItem x:Name="controlTab" Header="Control">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="74*"/>
                            <ColumnDefinition Width="695*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnUp" Content="Up" HorizontalAlignment="Left" Margin="63,65,0,0" VerticalAlignment="Top" Width="76" Grid.ColumnSpan="2"/>
                        <Button x:Name="btnDown" Content="Down" HorizontalAlignment="Left" Margin="63,103,0,0" VerticalAlignment="Top" Width="76" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="defaultVel" HorizontalAlignment="Left" Height="23" Margin="41,164,0,0" TextWrapping="Wrap" Text="1.0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                        <Label Content="Velocity" HorizontalAlignment="Left" Margin="21,136,0,0" VerticalAlignment="Top"/>
                        <Label Content="Control" HorizontalAlignment="Left" Margin="164.5,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                        <Button Content="Go" HorizontalAlignment="Left" Margin="147.5,162,0,0" VerticalAlignment="Top" Width="76" Grid.Column="1"/>
                        <TextBox x:Name="destination" HorizontalAlignment="Left" Height="23" Margin="121.5,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <TextBox x:Name="velocity" HorizontalAlignment="Left" Height="23" Margin="121.5,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <ComboBox x:Name="guiControl" HorizontalAlignment="Left" Margin="121.5,42,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <Label x:Name="lblUnits" Content="" HorizontalAlignment="Left" Margin="255.5,80,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                        <Label x:Name="velUnits" Content="" HorizontalAlignment="Left" Margin="255.5,118,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="setupTab" Header="Setup">
                    <Grid Background="#FFE5E5E5">
                        <Button x:Name="btnGraph" Content="Graph" HorizontalAlignment="Left" Margin="194,64,0,0" VerticalAlignment="Top" Width="74" Click="btnGraph_Click"/>
                        <Button x:Name="btnPosCal" Content="Position calibration" HorizontalAlignment="Left" Margin="194,104,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="7.28,0.45"/>
                        <TextBox x:Name="defVel" HorizontalAlignment="Left" Height="23" Margin="24,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="limLoad" HorizontalAlignment="Left" Height="23" Margin="24,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Margin="10,20,0,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <local:WpfGraphControl Margin="10" Controller="{Binding MultiController}" />

            <Border Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
                <StackPanel>
                    <TextBlock FontSize="10">Duration</TextBlock>
                    <TextBox Margin="0 5 0 0" Text="{Binding MultiController.Range.MaximumX,Mode=TwoWay}"></TextBox>

                    <TextBlock FontSize="10" Margin="0 10 0 0">Refresh Rate</TextBlock>
                    <TextBox Margin="0 5 0 0" Text="{Binding MultiController.RefreshRate,Mode=TwoWay}"></TextBox>

                    <TextBlock FontSize="10" Margin="0 10 0 0">Minimum Y</TextBlock>
                    <TextBox Margin="0 5 0 0" Text="{Binding MultiController.Range.MinimumY,Mode=TwoWay}"></TextBox>

                    <TextBlock FontSize="10" Margin="0 10 0 0">Maximum Y</TextBlock>
                    <TextBox Margin="0 5 0 0" Text="{Binding MultiController.Range.MaximumY,Mode=TwoWay}"></TextBox>

                    <CheckBox Margin="0 5 0 0" IsChecked="{Binding MultiController.Range.AutoY,Mode=TwoWay}">Auto Range (Y)</CheckBox>

                    <ListBox ItemsSource="{Binding MultiController.DataSeriesCollection}" Height="120" Margin="0 20">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsVisible}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Margin="0 10 0 0" Padding="5" Command="{Binding MultiController.ClearCommand}">Clear</Button>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>

</Window>
